// Iterative way to find GCD of two number
#include <iostream>
using namespace std;

int main() {
  int n1, n2, hcf;
  cout << "Enter two numbers: ";
  cin >> n1 >> n2;

  // swapping variables n1 and n2 if n2 is greater than n1.
  if ( n2 > n1) {   
    int temp = n2;
    n2 = n1;
    n1 = temp;
  }
    
  for (int i = 1; i <=  n2; ++i) {
    if (n1 % i == 0 && n2 % i ==0) {
      hcf = i;
    }
  }

  cout << "HCF = " << hcf;

  return 0;
}

/*   Recursion code for GCD of the two numbers*/

#include <iostream>
using namespace std;

int gcd(int first, int second)
{
	// Everything divides 0
  if (second == 0)
	  return first;
	if (first == 0)
	  return second;


	// base case when both numbers are equal to each other 
	if (first == second)
		return first;

	// a is greater than b
	if (first > second)
		return gcd(first-second, second);

	return gcd(first, second-first);
}


int main()
{
	  int n1, n2, hcf;
  cout << "Enter two numbers: ";
  cin >> n1 >> n2;
  hcf = gcd(n1,n2);
  cout << "HCF = " << hcf;
	return 0;
}

